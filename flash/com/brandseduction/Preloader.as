package com.brandseduction {  	import flash.display.*;  import flash.events.Event;	import flash.filters.*;	import caurina.transitions.Tweener;		public class Preloader extends MovieClip {    var _x_target;	    var _y_target;    		function Preloader() {    }        public function init() {      _x_target = parent._scene_positions["main"] + stage.stageWidth/2;      _y_target = stage.stageHeight/2;            x = _x_target      y = -50;      			drop_shadow();      Tweener.addTween(this, {y:_y_target, time:1, delay:1, transition:"easeOutBack", onComplete:start_listening});    }        function start_listening() {      addEventListener(Event.ENTER_FRAME, check_load_status)    }        function check_load_status(e:Event):void {    	var bytestotal = stage.loaderInfo.bytesTotal;    	var bytesloaded = stage.loaderInfo.bytesLoaded;    	if (bytesloaded >= bytestotal) { stop_listening_and_fly_away(); }    }        function stop_listening_and_fly_away() {      // trace ("movie loaded");      fly_away_and_hide();      removeEventListener(Event.ENTER_FRAME, check_load_status);    }        function fly_away_and_hide() {      Tweener.addTween(this, {y:-120, time:1, delay:0, transition:"easeInBack", onComplete:hyde});    }    function hyde() {      parent.load_finished();      visible = false;    }		function drop_shadow() {      var color:Number = 0x000000;      var angle:Number = 45;      var alpha:Number = 1;      var blurX:Number = 15;      var blurY:Number = 15;      var distance:Number = 2;      var strength:Number = 1;      var inner:Boolean = false;      var knockout:Boolean = false;      var quality:Number = BitmapFilterQuality.HIGH;      var s:DropShadowFilter = new DropShadowFilter(distance, angle, color, alpha, blurX, blurY, strength, quality, inner, knockout);      filters = [s];		}	}	}