package com.brandseduction {  	import flash.display.*;  import flash.events.Event;	import caurina.transitions.Tweener;		public class Preloader extends MovieClip {    var _x_target;	    var _y_target;    		function Preloader() {    }        public function init() {      _x_target = stage.stageWidth/2;      _y_target = stage.stageHeight/2;            x = _x_target      y = -50;//stage.stageHeight + 100            Tweener.addTween(this, {y:_y_target, time:1, delay:1, transition:"easeOutBack", onComplete:start_listening});    }        function start_listening() {      addEventListener(Event.ENTER_FRAME, check_load_status)    }        function check_load_status(e:Event):void {    	var bytestotal = stage.loaderInfo.bytesTotal;    	var bytesloaded = stage.loaderInfo.bytesLoaded;    	if (bytesloaded >= bytestotal) { stop_listening_and_fly_away(); }    }        function stop_listening_and_fly_away() {      trace ("movie loaded");      fly_away_and_hide();      removeEventListener(Event.ENTER_FRAME, check_load_status);    }        function fly_away_and_hide() {      Tweener.addTween(this, {y:-50, time:1, delay:0, transition:"easeInBack", onComplete:hyde});    }    function hyde() {      parent.load_finished();      visible = false;    }    	}	}