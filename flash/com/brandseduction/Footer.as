package com.brandseduction {  	import flash.display.MovieClip;	import flash.display.Stage;	import flash.filters.*;	import caurina.transitions.Tweener;	import flash.events.*;	public class Footer extends MovieClip {			function Footer() {    }        public function init() {			adapt_to_stage_scaling();			drop_shadow();						// Place offscreen at the bottom.. will slide up later			y = stage.stageHeight;    }		function draw_background() {	    graphics.beginFill(0xe8be5f);	    graphics.drawRect(0, 0, stage.stageWidth, 100);	    graphics.endFill();						}				function draw_top_edge() {			graphics.lineStyle(2, 0xdda43a);			graphics.moveTo(0,0);			graphics.lineTo(width,0);		}						function place_tiles() {			var padding = 10;			var tile_width = 20;			var tile_height = 20;      var x_max = Math.round(width/tile_width);      var y_max = Math.round(height/tile_height);      for (var ix=0; ix<x_max; ix++) {        for (var iy=0; iy<y_max; iy++) {          var tile:FooterTile = new FooterTile(tile_width*ix + padding, tile_height*iy + padding);          this.addChild(tile);        }      }		}				function come_out() {			var y_target = stage.stageHeight - height + 2;			Tweener.addTween(this, {y:y_target, time:.75, delay:3.5, transition:"easeOutCubic", onComplete:show_buttons});					}				function show_buttons() {			// PurchaseButton      var purchase_button:PurchaseButton = new PurchaseButton();			purchase_button.name = "purchase_button"      this.addChild(purchase_button)			// Sender Button      var sender_button:SenderButton = new SenderButton();			sender_button.name = "sender_button"      this.addChild(sender_button);			// RGC Button      var rgc_button:RgcButton = new RgcButton();			rgc_button.name = "rgc_button"      this.addChild(rgc_button)      rgc_button.init();			var to_fridge:BackToFridgeButton = new BackToFridgeButton();			to_fridge.name = "back_to_fridge"			addChild(to_fridge);			to_fridge.init();		}				function drop_shadow() {      var color:Number = 0x000000;      var angle:Number = -90;      var alpha:Number = 1;      var blurX:Number = 0;      var blurY:Number = 5;      var distance:Number = 5;      var strength:Number = 0.5;      var inner:Boolean = false;      var knockout:Boolean = false;      var quality:Number = BitmapFilterQuality.HIGH;      var s:DropShadowFilter = new DropShadowFilter(distance, angle, color, alpha, blurX, blurY, strength, quality, inner, knockout);      filters = [s];		}				public function adapt_to_stage_scaling() {			draw_background();			place_tiles();			draw_top_edge();			come_out();		}			}	}