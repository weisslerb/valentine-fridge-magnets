package com.brandseduction {  	import flash.display.MovieClip;	import flash.display.Stage;	import flash.filters.*;	import caurina.transitions.Tweener;	import flash.events.*;	public class Footer extends MovieClip {	  		function Footer() {    }        public function init() {			adapt_to_scale();			drop_shadow();						// Place offscreen at the bottom.. will slide up later			y = stage.stageHeight;						buttonMode = true;       mouseChildren = false;      addEventListener(MouseEvent.MOUSE_DOWN, pressHandler);			    }		function pressHandler(event:MouseEvent):void {		  parent.getChildAt(0).swap_scene();		}		public function adapt_to_scale() {			draw_background();			place_tiles();			draw_top_edge();			align_with_bottom_of_stage();		}		function draw_background() {	    graphics.beginFill(0xe8be5f);	    graphics.drawRect(0, 0, stage.stageWidth, 100);	    graphics.endFill();						}				function draw_top_edge() {			graphics.lineStyle(2, 0xdda43a);			graphics.moveTo(0,0);			graphics.lineTo(width,0);		}						function place_tiles() {			var padding = 10;			var tile_width = 20;			var tile_height = 20;      var x_max = Math.round(width/tile_width);      var y_max = Math.round(height/tile_height);      for (var ix=0; ix<x_max; ix++) {        for (var iy=0; iy<y_max; iy++) {          var tile:FooterTile = new FooterTile(tile_width*ix + padding, tile_height*iy + padding);          this.addChild(tile);        }      }		}				function align_with_bottom_of_stage() {			var y_target = stage.stageHeight - height + 2;			Tweener.addTween(this, {y:y_target, time:.75, delay:1.5, transition:"easeOutCubic"});		}				function drop_shadow() {      var color:Number = 0x000000;      var angle:Number = -90;      var alpha:Number = 1;      var blurX:Number = 0;      var blurY:Number = 5;      var distance:Number = 5;      var strength:Number = 0.5;      var inner:Boolean = false;      var knockout:Boolean = false;      var quality:Number = BitmapFilterQuality.HIGH;      var s:DropShadowFilter = new DropShadowFilter(distance, angle, color, alpha, blurX, blurY, strength, quality, inner, knockout);      filters = [s];		}			}	}