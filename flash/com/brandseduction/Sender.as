package com.brandseduction {    import flash.display.*;	import flash.filters.*;	import caurina.transitions.Tweener;	import flash.text.*;		public class Sender extends MovieClip {				var _x_init;		var _y_init;				function Sender() {		}				public function init() {      			x = _x_init = parent._scene_positions["send"] + stage.stageWidth/2;			y = _y_init = stage.stageHeight/2;						var stamp:SenderStamp = new SenderStamp();      this.addChild(stamp)      stamp.init();			// Font			var courier:Font = new Courier();			// Format			var f:TextFormat = new TextFormat();			f.font = courier.fontName;			f.color = 0x000000;			f.size = 12;			// Text			var sn = new TextField();			sn.name = "sender_name"			sn.autoSize = TextFieldAutoSize.LEFT;			sn.type = TextFieldType.INPUT;			sn.embedFonts = true;			sn.border = true			sn.defaultTextFormat = f;			sn.text = "your name";/*			sn.text = "Zeke Greek";*/			addChild(sn);			sn.x = -width/2 + 30			sn.y = -height/2 + 80						var se = new TextField();			se.name = "sender_email"			se.autoSize = TextFieldAutoSize.LEFT;			se.type = TextFieldType.INPUT;			se.embedFonts = true;			se.border = true			se.defaultTextFormat = f;			se.text = "your email address";/*			se.text = "zeke@sikelianos.com";*/			addChild(se);			se.x = -width/2 + 30			se.y = -height/2 + 110						var rn = new TextField();			rn.name = "recipient_name"			rn.autoSize = TextFieldAutoSize.LEFT;			rn.type = TextFieldType.INPUT;			rn.embedFonts = true;			rn.border = true			rn.defaultTextFormat = f;			rn.text = "your friend's name";/*			rn.text = "Alter Ego";*/			addChild(rn);			rn.x = -30			rn.y = 0						var re = new TextField();			re.name = "recipient_email"			re.autoSize = TextFieldAutoSize.LEFT;			re.type = TextFieldType.INPUT;			re.embedFonts = true;			re.border = true			re.defaultTextFormat = f;			re.text = "your friend's email address";/*			re.text = "sikelianos@gmail.com";*/			addChild(re);			re.x = -30			re.y = 30			drop_shadow();		}						public function blow_away(msg_id:Number) {			Tweener.addTween(this, {scaleX:.1, scaleY:.1, time:1, transition:"easeOutBack"})			Tweener.addTween(this, {rotation:5000, time:1})			var x_target = x + stage.stageWidth;			Tweener.addTween(this, {x:x_target, time:1, transition:"easeInCubic", onComplete:come_back})		}				public function come_back() {			rotation = 90			scaleX = scaleY = .8			Tweener.addTween(this, {x:_x_init, y:_y_init, scaleX:1, scaleY:1, rotation:0, time:1.5, transition:"easeOutCubic"})						var f:TextFormat = new TextFormat();			var courier:Font = new Courier();			f.font = courier.fontName;			f.color = 0xFF3333;			f.size = 12;			// Text			var t = new TextField();			t.name = "message_sent"			t.autoSize = TextFieldAutoSize.LEFT;			t.embedFonts = true;			t.border = true;			t.borderColor = 0xFF3333;			t.multiline = true			t.defaultTextFormat = f;			t.text = "Your message has been sent to your friend,\n\nand CC'ed to you!";			addChild(t);			t.x = -70			t.y = 80;		}				function drop_shadow() {      var color:Number = 0x000000;      var angle:Number = 45;      var alpha:Number = 1;      var blurX:Number = 15;      var blurY:Number = 15;      var distance:Number = 2;      var strength:Number = 1;      var inner:Boolean = false;      var knockout:Boolean = false;      var quality:Number = BitmapFilterQuality.HIGH;      var s:DropShadowFilter = new DropShadowFilter(distance, angle, color, alpha, blurX, blurY, strength, quality, inner, knockout);      filters = [s];		}			}	}