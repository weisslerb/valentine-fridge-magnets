package com.brandseduction {  	import flash.display.*;	import flash.filters.DropShadowFilter;	import caurina.transitions.Tweener;	import de.popforge.events.SimpleMouseEvent;	import de.popforge.events.SimpleMouseEventHandler;	import flash.filters.*	import flash.net.*	public class BackToFridgeButton extends MovieClip {		var _init_scale = .4;		function BackToFridgeButton() {			buttonMode = true;       mouseChildren = false;			SimpleMouseEventHandler.register(this);			addEventListener( SimpleMouseEvent.ROLL_OVER, rollOverHandler);			addEventListener( SimpleMouseEvent.ROLL_OUT, rollOutHandler);			addEventListener( SimpleMouseEvent.RELEASE, releaseHandler);			addEventListener( SimpleMouseEvent.RELEASE_OUTSIDE, releaseHandler);		}				public function init() {			alpha = 0			scaleX = scaleY = _init_scale;			var p = MovieClip(parent).getChildByName("sender_button")			x = p.x + p.width/2 + 50 + width/2			y = 52;			drop_shadow();		}				function turn_off() {			Tweener.addTween(this, {alpha:0, time:.5, transition:"linear"})		}				function turn_on() {			Tweener.addTween(this, {alpha:1, time:.5, transition:"linear"})		}				function drop_shadow() {      var color:Number = 0x000000;      var angle:Number = 45;      var alpha:Number = 1;      var blurX:Number = 6;      var blurY:Number = 6;      var distance:Number = 2;      var strength:Number = 0.75;      var inner:Boolean = false;      var knockout:Boolean = false;      var quality:Number = BitmapFilterQuality.HIGH;      var s:DropShadowFilter = new DropShadowFilter(distance, angle, color, alpha, blurX, blurY, strength, quality, inner, knockout);      filters = [s];		}		private function rollOverHandler(event:SimpleMouseEvent):void {/*			Tweener.addTween(this, {scaleX:1, scaleY:1, time:.5, transition:"easeOutCubic"})*/		}		private function rollOutHandler(event:SimpleMouseEvent):void {/*			Tweener.addTween(this, {scaleX:_init_scale, scaleY:_init_scale, time:1, transition:"easeOutCubic"})*/		}				private function releaseHandler(event:SimpleMouseEvent):void {				parent.parent.getChildByName("container").swap_scene("main");		}			}}