package com.brandseduction {  	import flash.display.*;	import flash.filters.DropShadowFilter;	import caurina.transitions.Tweener;	import de.popforge.events.SimpleMouseEvent;	import de.popforge.events.SimpleMouseEventHandler;	import flash.filters.*	import flash.events.*	public class PurchaseButton extends MovieClip {				var _init_scale = .8;		function PurchaseButton() {			buttonMode = true;       mouseChildren = false;			addEventListener(Event.ADDED_TO_STAGE, init);			SimpleMouseEventHandler.register(this);			addEventListener( SimpleMouseEvent.ROLL_OVER, rollOverHandler);			addEventListener( SimpleMouseEvent.ROLL_OUT, rollOutHandler);			addEventListener( SimpleMouseEvent.PRESS, pressHandler);			addEventListener( SimpleMouseEvent.RELEASE, releaseHandler);			addEventListener( SimpleMouseEvent.RELEASE_OUTSIDE, releaseHandler);		}				public function init(e:Event) {			drop_shadow();			scaleX = scaleY = _init_scale;			x = width/2 + 50			y_target = 52;			y = y_target + 100;			Tweener.addTween(this, {y:y_target, time:1, delay:2, transition:"easeOutBack"})		}				function drop_shadow() {      var color:Number = 0x000000;      var angle:Number = 45;      var alpha:Number = 1;      var blurX:Number = 4;      var blurY:Number = 4;      var distance:Number = 1;      var strength:Number = 0.55;      var inner:Boolean = false;      var knockout:Boolean = false;      var quality:Number = BitmapFilterQuality.HIGH;      var s:DropShadowFilter = new DropShadowFilter(distance, angle, color, alpha, blurX, blurY, strength, quality, inner, knockout);      filters = [s];		}		private function rollOverHandler(event:SimpleMouseEvent):void {			Tweener.addTween(this, {scaleX:1, scaleY:1, time:.5, transition:"easeOutCubic"})		}		private function rollOutHandler(event:SimpleMouseEvent):void {			Tweener.addTween(this, {scaleX:_init_scale, scaleY:_init_scale, time:1, transition:"easeOutCubic"})		}		private function pressHandler(event:SimpleMouseEvent):void {			parent.parent.getChildAt(0).swap_scene("purchase");		}				private function releaseHandler(event:SimpleMouseEvent):void {			}	}}