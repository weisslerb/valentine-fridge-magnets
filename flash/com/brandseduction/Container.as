package com.brandseduction {    import flash.display.*;  import flash.events.*;	import caurina.transitions.Tweener;		public class Container extends MovieClip {	  		var _logo;		var _purchase;		var _scene;		var _scene_positions:Array = new Array();			function Container() {    }                             public function init() {			update_scene_positions();       // Configure stage      stage.align = StageAlign.TOP_LEFT;      stage.scaleMode = StageScaleMode.NO_SCALE;						// This will be called when the stage is resized			// This function will tell all relevant objects to adjust to the new scale      stage.addEventListener(Event.RESIZE, resizeHandler);			x = -_scene_positions["main"];                  // Tiling Background      var bg:TilingBackground = new TilingBackground();      this.addChild(bg);      bg.init();                          // Preloader      var preloader:Preloader = new Preloader();      this.addChild(preloader);      preloader.init();    }    function load_finished() {      trace("load finished")            // Fridge      var fridge:Fridge = new Fridge();			fridge.name = "fridge"      this.addChild(fridge);      fridge.init();            // Harold and Mabel (and Jalouzie?)      var logo:Logo = new Logo();      this.addChild(logo)      logo.init();			_logo = logo;						// Purchase      var purchase:Purchase = new Purchase();      this.addChild(purchase)      purchase.init();			_purchase = purchase;						// Sender      var sender:Sender = new Sender();			sender.name = "sender";      this.addChild(sender)      sender.init();    }		function update_scene_positions() {			_scene_positions["purchase"] = 0;			_scene_positions["main"] = stage.stageWidth;			_scene_positions["send"] = 2*stage.stageWidth;		}		function swap_scene(scene:String) {			var target_scene = (_scene == scene) ? "main" : scene;			_scene = target_scene;			Tweener.addTween(this, {x:-_scene_positions[target_scene], time:1, transition:"easeInOutCubic"})						var back = parent.getChildByName("footer").getChildByName("back_to_fridge")			if (target_scene == "main") {				back.turn_off()			} else {				back.turn_on();			}						if (target_scene == "purchase") {				MovieClip(_purchase).shake();			} else {				MovieClip(_purchase).blow_away();			}		}    function resizeHandler(e:Event):void {			update_scene_positions();			getChildByName("fridge").adapt_to_stage_scaling();			// Move fridge			// Resize footer			// etc      trace(stage.stageWidth/2);    }    		function releaseHandler(e:MouseEvent):void {/*			e.target.do_yo_thang();*//*			stopDrag();*/		}	}	}